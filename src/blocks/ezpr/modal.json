{
  "type": "modal",
  "callback_id": "view_1",
  "title": {
    "type": "plain_text",
    "text": "PR Review Request"
  },
  "blocks": [
    {
      "type": "input",
      "element": {
        "type": "url_text_input",
        "action_id": "url_text_input-action"
      },
      "label": {
        "type": "plain_text",
        "text": "PR Link",
        "emoji": true
      }
    },
    {
      "type": "input",
      "element": {
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Select an item",
          "emoji": true
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "5 minutes",
              "emoji": true
            },
            "value": "5 minutes"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "15 minutes",
              "emoji": true
            },
            "value": "15 minutes"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "30 minutes",
              "emoji": true
            },
            "value": "30 minutes"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "1 hour",
              "emoji": true
            },
            "value": "1 hour"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "Estimated Time to Review",
        "emoji": true
      }
    },
    {
      "type": "input",
      "element": {
        "type": "plain_text_input",
        "multiline": true
      },
      "label": {
        "type": "plain_text",
        "text": "Please provide a summary of changes, and any other relevant information",
        "emoji": true
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Channel*"
      }
    },
    {
      "type": "actions",
      "elements": [
        {
          "type": "conversations_select",
          "placeholder": {
            "type": "plain_text",
            "text": "Select public channel",
            "emoji": true
          },
          "filter": {
            "include": ["public"]
          },
          "action_id": "ack"
        }
      ]
    },
    {
      "type": "input",
      "element": {
        "type": "multi_users_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Select users",
          "emoji": true
        },
        "action_id": "ack"
      },
      "label": {
        "type": "plain_text",
        "text": "Reviewer(s)",
        "emoji": true
      }
    }
  ],
  "submit": {
    "type": "plain_text",
    "text": "Submit"
  }
}
